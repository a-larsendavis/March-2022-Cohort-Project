<%- include("partials/header.ejs") %>
<%- include("partials/navbar.ejs") %>


<link rel="stylesheet" href="profilestyles.css" >
<script src="https://kit.fontawesome.com/0058d52c91.js" crossorigin="anonymous"></script>

    <div class ="container">
    <h4>Profile Page</h4>
 
      <form action="/sendData" method="post"> 
       
        <div class="formfirst">
            <div class="detailspersonal">
               
                <div class="fields">

                    <div class="inputfield" >
                        <i class="fa-regular fa-file-signature"></i>
                        <label>Full Name</label>
                        <input 
                        type="text" 
                        name="fullname" 
                        value="<%= userResult.fullname %>">
                      
                    </div>

                    <div class="inputfield">
                        <label> Date of birth</label>
                        <input 
                        type="date" 
                        name="birth" 
                        placeholder="Enter your birth" 
                        <%# The following value attribute uses ternary operator %>    
                        value="<%= userResult.birth ? userResult.birth.toISOString().substr(0, 10) : "" %>">
                        

                    </div>
                    <div class="inputfield">
                        <label>Email</label>
                        <input 
                        type="email" 
                        name="email"
                        placeholder="Enter your email" 
                        value="<%= userResult.email %>">
                    </div>

                    <div class="inputfield">
                        <label>zip code</label>
                        <input 
                        type="text" 
                        name="zipcode" 
                        placeholder="Enter your zip code" 
                        value="<%= userResult.zipcode %>">
                    </div>

                    <div class="inputfield">
                        <label>Address</label>
                        <input 
                        type="text" 
                        name="address" 
                        placeholder="Enter your Address"
                        value="<%= userResult.address %>">
                    </div>

                    
                    <div class="inputfield">
                        <label>Phone</label>
                        <input 
                        type="tel"  
                        name="phone" 
                        placeholder="Enter your Phone number" 
                        value="<%= userResult.phone %>">
                     <br><br>
                     <button id="profileSubmit" type="submit">Submit</button>
                   
                    </div>
                </div>           
            </div>
        </div>
        <br>
        
    
    </form>

    </div>

    
    <%- include("partials/footer.ejs") %>